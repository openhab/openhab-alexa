{
  "name": "openHAB.alexa-smarthome",
  "version": "3.2.3",
  "description": "openHAB skill for Amazon Alexa",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/openhab/openhab-alexa.git"
  },
  "author": "openHAB",
  "contributors": [
    "Dan Cunningham",
    "Jeremy Setton"
  ],
  "license": "EPL-2.0",
  "bugs": {
    "url": "https://github.com/openhab/openhab-alexa/issues"
  },
  "homepage": "https://github.com/openhab/openhab-alexa",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "fix": "eslint --fix .",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha",
    "test:coverage": "nyc npm test"
  },
  "dependencies": {
    "agentkeepalive": "^4.2.1",
    "module-alias": "^2.2.2",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "sprintf-js": "^1.1.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "ajv": "^6.12.6",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "nock": "^13.2.9",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "mocha": {
    "recursive": true,
    "reporter": "spec",
    "slow": "600"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "skip-full": true,
    "reporter": [
      "html",
      "text"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "_moduleAliases": {
    "@root": ".",
    "@alexa": "alexa",
    "@openhab": "openhab"
  }
}
