{
  "name": "openhab-alexa",
  "version": "3.3.3",
  "description": "openHAB skill for Amazon Alexa",
  "license": "EPL-2.0",
  "author": "openHAB",
  "contributors": [
    "Dan Cunningham",
    "Jeremy Setton"
  ],
  "homepage": "https://github.com/openhab/openhab-alexa",
  "repository": {
    "type": "git",
    "url": "https://github.com/openhab/openhab-alexa.git"
  },
  "bugs": {
    "url": "https://github.com/openhab/openhab-alexa/issues"
  },
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "fix": "eslint --fix .",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha",
    "test:coverage": "c8 npm test"
  },
  "dependencies": {
    "agentkeepalive": "^4.3.0",
    "axios": "^1.3.4",
    "sprintf-js": "^1.1.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "ajv": "^6.12.6",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "chai-subset": "^1.6.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "esmock": "^2.3.1",
    "mocha": "^10.2.0",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "skip-full": true,
    "reporter": [
      "html",
      "text"
    ]
  },
  "imports": {
    "#root/*": "./*",
    "#alexa/*": "./alexa/*",
    "#openhab/*": "./openhab/*"
  },
  "mocha": {
    "loader": "esmock",
    "no-warnings": true,
    "recursive": true,
    "reporter": "spec",
    "slow": "600"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  }
}
